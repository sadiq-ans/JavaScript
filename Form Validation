<body>

	<div class="form-container">
		<h1 class="h3 text-left my-4">Form Validation</h1>
		<div class="container">
			<form action="" id="myForm">
				<div class="row">

					<!-- NAME -->
					<div class="col-12">
						<div class="mb-3">
							<label for="name" class="form-label fw-bold">Full Name:<span class="text-danger">*</span></label>
							<input type="text" name="name" class="form-control" id="name" placeholder="Enter you full name..." required>
									</div>
						</div>

						<!-- EMAIL -->
						<div class="col-12">
							<div class="mb-3">
								<label for="mail" class="form-label fw-bold">Email: <span class="text-danger">*</span></label>
								<input type="email" name="mail" class="form-control" id="mail" placeholder="name@example.com" required>
								<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
							</div>
						</div>

						<!-- AGE -->
						<div class="col-12">
							<div class="mb-3">
								<label for="age" class="form-label fw-bold">Age: <span class="text-danger">*</span></label>
								<input type="number" name="age" class="form-control" id="age" placeholder="What is your age?" required>
									</div>
							</div>

							<!-- GENDER INLINE -->
							<div class="col-12">
								<div class="mb-3">
									<span class="fw-bold">Gender: <span class="text-danger">*</span></span>
									<div class="d-flex align-items-center mt-1">
										<div class="form-check me-3">
											<input type="radio" id="male" name="customRadio" class="form-check-input" value="male">
											<label class="form-check-label" for="male">Male</label>
										</div>
										<div class="form-check me-3">
											<input type="radio" id="female" name="customRadio" class="form-check-input" value="female">
											<label class="form-check-label" for="female">Female</label>
										</div>
										<div class="form-check">
											<input type="radio" id="ogender" name="customRadio" class="form-check-input" value="others">
											<label class="form-check-label" for="ogender">Others</label>
										</div>
									</div>
								</div>
							</div>
							<!-- END GENDER INLINE -->

							<!-- COURSE -->
							<div class="col-12">
								<div class="mb-3">
									<label for="course" class="form-label fw-bold">Course: <span class="text-danger">*</span></label>
									<select name="course" class="form-select" id="course" required>
											<option value="" disabled selected>Please select your course...</option>
											<option value="1">Graphic Design</option>
											<option value="2">UI/UX Design</option>
											<option value="3">AI/ML Data Science</option>
											<option value="4">Cyber Security</option>
										</select>
								</div>
							</div>

							<!-- Location -->
							<div class="col-12">
								<div class="mb-3">
									<label for="branch" class="form-label fw-bold">Branch: <span class="text-danger">*</span></label>
									<select name="branch" class="form-select" id="branch" required>
											<option value="" disabled selected>Please select your branch...</option>
											<option value="1">Surat</option>
											<option value="2">Ahmedabad</option>
											<option value="3">Rajkot</option>
											<option value="4">Vadodara</option>
										</select>
								</div>
							</div>

							<!-- PASSWORD -->
							<div class="col-md-6">
								<div class="mb-3">
									<label for="pass" class="form-label fw-bold">Password: <span class="text-danger">*</span></label>
									<input type="password" name="pass" class="form-control" id="pass" placeholder="Min 8 characters" required>
								</div>
								</div>

								<!-- CONFIRM PASSWORD -->
								<div class="col-md-6">
									<div class="mb-3">
										<label for="cPass" class="form-label fw-bold">Confirm Password: <span class="text-danger">*</span></label>
										<input type="password" name="cPass" class="form-control" id="cPass" placeholder="Re-enter password" required>
									</div>

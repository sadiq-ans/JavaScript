    <section>
        <div class="container">
            <div class="container-top">
                <h1 id="result">0</h1>
                <button id="clear">Clear</button>
            </div>

            <div class="container-center">
                <input type="text" id="num_1" placeholder="Enter first number">
                <input type="text" id="num_2" placeholder="Enter second number">
            </div>

            <div class="container-bottom">
                <button id="add">+</button>
                <button id="sub">-</button>
                <button id="mul">x</button>
                <button id="div">/</button>
            </div>

        </div>

        <p>Created by <span style="color: var(--s-accent-color);cursor: pointer;text-decoration: underline;">Sadique
                Ansari</span></p>

    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        $(document).ready(function () {

            // Allow only numbers in inputs
            $("#num_1, #num_2").on("input", function () {
                this.value = this.value.replace(/[^0-9]/g, ''); // only digits allowed
            });

            $("#add").on("click", function () {
                let num_1 = Number($("#num_1").val());
                let num_2 = Number($("#num_2").val());
                let result = num_1 + num_2;
                $("#result").html(result);
            });

            $("#sub").on("click", function () {
                let num_1 = Number($("#num_1").val());
                let num_2 = Number($("#num_2").val());
                let result = num_1 - num_2;
                $("#result").html(result);
            });

            $("#mul").on("click", function () {
                let num_1 = Number($("#num_1").val());
                let num_2 = Number($("#num_2").val());
                let result = num_1 * num_2;
                $("#result").html(result);
            });

            $("#div").on("click", function () {
                let num_1 = Number($("#num_1").val());
                let num_2 = Number($("#num_2").val());
                let result = num_2 === 0
                    ? "Error: Cannot divide by zero"
                    : Math.trunc(num_1 / num_2); // integer division
                $("#result").html(result);
            });

            // Clear button
            $("#clear").on("click", function () {
                $("#num_1").val("");
                $("#num_2").val("");
                $("#result").html("0");
            });
        });
    </script>
</body>

